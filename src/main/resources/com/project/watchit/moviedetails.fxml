<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.watchit.MovieDetailsController">
   <children>
      <Button fx:id="watchButton" layoutX="366.0" layoutY="510.0" mnemonicParsing="false" onAction="#watchMovie" style="-fx-background-color: black;" text="Watch" textFill="#9090907d">
         <font>
            <Font name="Sitka Text Bold Italic" size="15.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="497.0" layoutY="510.0" mnemonicParsing="false" onAction="#navigateBack" style="-fx-background-color: black;" text="Back">
         <font>
            <Font name="Sitka Text Bold Italic" size="15.0" />
         </font>
      </Button>
      <HBox layoutX="14.0" layoutY="150.0" prefHeight="408.0" prefWidth="307.0">
         <children>
            <ImageView fx:id="moviePoster" fitHeight="420.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <HBox layoutX="350.0" layoutY="117.0" prefHeight="67.0" prefWidth="876.0">
         <children>
            <Label fx:id="movieTitle" prefHeight="15.0" prefWidth="551.0" text="Label" textFill="#ebe8e8">
               <font>
                  <Font name="Sitka Text Bold Italic" size="32.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox layoutX="365.0" layoutY="177.0" prefHeight="44.0" prefWidth="132.0">
         <children>
            <Label fx:id="movieImdbScoreLabel" prefHeight="41.0" prefWidth="80.0" text="Label" />
         </children>
      </HBox>
      <HBox layoutX="365.0" layoutY="232.0" prefHeight="51.0" prefWidth="945.0">
         <children>
            <Label fx:id="releaseDateLabel" prefHeight="44.0" prefWidth="251.0" text="Label">
               <font>
                  <Font name="Sitka Text" size="12.0" />
               </font>
            </Label>
            <Label fx:id="movieGenre" prefHeight="45.0" prefWidth="243.0" text="Label" />
            <Label fx:id="lanuagesLabel" prefHeight="41.0" prefWidth="279.0" text="Label" />
            <Label fx:id="DaurationLabel" prefHeight="42.0" prefWidth="324.0" text="Label" />
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="623.0" prefHeight="163.0" prefWidth="1324.0">
         <children>
            <Label fx:id="descriptionLabel" prefHeight="164.0" prefWidth="1138.0" text="Label" textAlignment="JUSTIFY">
               <font>
                  <Font name="Sitka Text" size="22.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox layoutX="366.0" layoutY="294.0" prefHeight="52.0" prefWidth="619.0">
         <children>
            <Label fx:id="movieCast" prefHeight="51.0" prefWidth="507.0" text="Label" />
         </children>
      </HBox>
      <HBox layoutX="365.0" layoutY="367.0" prefHeight="67.0" prefWidth="546.0">
         <children>
            <Label fx:id="movieDirector" prefHeight="62.0" prefWidth="418.0" text="Label" />
         </children>
      </HBox>
      <HBox layoutX="365.0" layoutY="443.0" prefHeight="62.0" prefWidth="473.0">
         <children>
            <Label prefHeight="39.0" prefWidth="334.0" text="If you whtched the movie please rate it">
               <font>
                  <Font name="Sitka Heading" size="15.0" />
               </font>
            </Label>
            <ComboBox fx:id="Rate" prefHeight="40.0" prefWidth="189.0" promptText="Rate from 1 to 5" style="-fx-background-color: black;" />
         </children>
      </HBox>
      <Button fx:id="submitRating" layoutX="845.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleSubmitRating" prefHeight="25.0" prefWidth="67.0" style="-fx-background-color: black;" text="submit" />
   </children>
</AnchorPane>
